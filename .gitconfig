[core]
  editor = "nvim"
  excludesfile = /Users/markus/.gitignore_global
[credential]
  helper = osxkeychain
[crential "https://github.com"]
  username = markuswind
[user]
  name = Markus Wind
  email = markuswind@gmail.com
[push]
  default = simple
[alias]
  s = status
  goodness = "!git diff $* | gn"
  aa = add .
  ca = commit --amend
  ci = commit --verbose
  co = checkout
  # stashes
  lstash = "!git stash list | cat"
  showstash = "!git stash show -p"
  # log aliases
  head = "!. ~/.githelpers && simple_git_head" -1
  slog = "!. ~/.githelpers && simple_git_log" -15
[color]
  branch = auto
  diff = auto
  status = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow bold
  deleted = red
  changed = green
  untracked = cyan
[tig "color"]
  cursor = white red bold
