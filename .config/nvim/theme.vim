syntax enable
colorscheme PaperColor

set background=light
set guifont=Source\ Code\ Pro\ for\ Powerline:h13
set guioptions=aem

set cursorline
set noshowmode

" enable whitespace indicators
set list
set listchars=tab:▸\ ,trail:·,eol:¬

" show line numbers
set number
set relativenumber
set numberwidth=6
set scrolloff=30

" vertical split borders
set fillchars+=vert:│ 
